.modal-content
  %form{:action => "mailto:myricktc@gmail.com"}
    .row
      .input-field.col.s12
        %i.material-icons.prefix account_circle
        %input#icon_account_circle{:type => "text", :class => "validate"}/
        %label.active{:for => "icon_account_circle"} Name
    .row
      .input-field.col.s12
        %i.material-icons.prefix email
        %input#email{:type => "email", :class => "validate"}/
        %label.active{:for => "email"} Email
    .row
      .input-field.col.s12
        %i.material-icons.prefix edit
        %textarea#textarea1.materialize-textarea
        %label{:for => "textarea1"} Comments

    .row
      %button.center-align.btn.waves-effect.waves-light.col.s10.push-s1{:name => "action", :type => "submit"}
        Submit
        %i.material-icons.right send

.modal-content
  %form.col.s12
    .row
      .input-field.col.s12
        %i.material-icons.prefix account_circle
        %input#first_name.validate{:type => "text"}/
        %label.active{:for => "first_name"} Name
    .row
      .input-field.col.s12
        %i.material-icons.prefix email
        %input#email.validate{:type => "email"}/
        %label.active{:for => "email"} Email
    .row
      %button.center-align.btn.waves-effect.waves-light{:name => "action", :type => "submit"}
        Submit
        %i.material-icons.right send
